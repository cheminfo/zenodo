{
  "compilerOptions": {
    "checkJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "lib": ["es2022"],
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*"]
}
