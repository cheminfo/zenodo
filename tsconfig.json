{
  "compilerOptions": {
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*"]
}
